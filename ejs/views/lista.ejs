<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../css/lista.css">
        <title>Lista en EJS</title>
    </head>
    <body>
        <a href="/" class="ref">Ingresar un producto</a>
        <h2>Productos</h2>
        <% if(productos.length !== 0) { %>
            <div>
                <table class="estilo">
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Imagen</th>
                    </tr>
                    <% productos.forEach((i) => { %>
                    <tr>
                        <td><%= i.title %></td>
                        <td><%= i.price %></td>
                        <td>
                            <img
                                class="img"
                                src="<%= i.thumbnail %>"
                                alt="imagen del producto"
                            />
                        </td>
                    </tr>
                    <% }); %>
                </table>
            </div>
        <% } else { %>
        <h3>No hay productos agregados!</h3>
        <% } %>
    </body>
</html>